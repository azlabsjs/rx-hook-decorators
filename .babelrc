{
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": false
      }
    ],
    ["@babel/preset-typescript"]
  ],
  "plugins": ["@babel/plugin-proposal-class-properties"],
  "env": {
    "test": {
      "plugins": [
        "@babel/plugin-transform-modules-commonjs",
        "@babel/plugin-proposal-optional-chaining",
        "@babel/plugin-syntax-dynamic-import"
      ]
    }
  },
  "ignore": [
    "node_modules",
    "build",
    "**/*.stories.*",
    "**/__tests__",
    "**/__mocks__",
    "**/test-utils"
  ]
}
